  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "model/*": ["./src/model/*"],
      "view/*": ["./src/view/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["vite.config.ts"]
}